<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/etMealIngredientNameOut"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="1dp"
        android:hint="Nazwa składnika" />
    <EditText
        android:id="@+id/etMealIngredientCountOut"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/etMealIngredientNameOut"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="Ilość"
        android:inputType="numberDecimal"/>
    <EditText
        android:id="@+id/etMealIngredientUnitOut"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/etMealIngredientCountOut"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="Jednostka" />
    <Button
        android:id="@+id/btnRemoveMealIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/etMealIngredientUnitOut"
        android:text="Usuń"/>
</RelativeLayout>